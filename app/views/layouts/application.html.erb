<!DOCTYPE html>
<html>
<head>
  <title>Pennywise</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "https://www.google.com/jsapi?autoload={'modules':[{'name':'visualization','version':'1.1','packages':['bar']}]}" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container-fluid">
  <div class="row">
    <div class="col col-md-offset-2 col-md-8">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">PennyWise</a>
          </div>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class="<%= 'active' if params[:controller] == 'overview' %>"><%= link_to 'Overview', overview_index_path %></li>
              <li class="<%= 'active' if params[:controller] == 'month' %>"><%= link_to 'Expenditures', month_index_path %></li>
              <li class="<%= 'active' if params[:controller] == 'categories' %>"><%= link_to 'Categories', categories_path %></li>
              <li class="disabled"><a href="#">Account</a></li>
            </ul>
          </div>
        </div>

      </nav>
    </div>
  </div>
  <div class=row>
    <div class="col col-md-offset-2 col-md-8" style="padding-left:5%;padding-right:5%">
      <%= yield %>
    </div>
  </div>
</div>
</body>
</html>
