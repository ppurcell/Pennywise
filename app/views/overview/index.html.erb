
<div class="row">
  <div class="col col-md-12 col-lg-8">
    <% if !@latest_article.nil? %>
        <%= render partial: 'recent_pic', locals: {img_url: @latest_article.picture1} %>
    <% end %>
  </div>
  <div class="col col-md-12 col-lg-4" style="overflow: hidden; height:100%">
    <h3>Latest Update:</h3>

    <div>
      <% if !@latest_article.nil? %>
          <h4><%= @latest_article.location %> - <%= @latest_article.date %></h4>
          <%= simple_format @latest_article.description %>
      <% end %>
    </div>
  </div>
</div>

<div class="row" style="border-style:solid;border-width:2px;margin-bottom:20px">
  <div class="col col-md-12">
  </div>
</div>

<div class="row">

  <div class="col col-md-8 col-lg-8">
    <%= render 'geo_chart' %>
  </div>
  <div class="col col-md-4 col-lg-4" style="height:100%">
    <%= render partial: 'recent_loc', locals: {recent_locations: @recent_locations} %>
  </div>

</div>

<div class="row" style="border-style:solid;border-width:2px;margin-bottom:20px">
  <div class="col col-md-12">
  </div>
</div>

<div class="row">
  <div class="col col-md-6 col-lg-6">
    <div class="panel panel-primary">
      <div class="panel-heading">Breakdown By Category</div>
      <div class="panel-body">
        <div id="dual_x_div" style="width: 100%; height: 300px; overflow: hidden; border-style:solid;border-width:2px;"></div>
      </div>
    </div>


  </div>
  <div class="col col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">Category by Percentage</div>
      <div class="panel-body">
        <div id="piechart" style="width: 100%; height: 300px; border-style:solid;border-width:2px;"></div>
      </div>
    </div>

  </div>

</div>




