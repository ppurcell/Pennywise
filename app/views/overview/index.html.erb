
<div class="row" style="border-style:solid;border-width: 5px;margin: 10px; padding:5px; background-color: #283661;">
      <div class="col col-md-12 col-lg-8" style="color:#040E32;">
        <% if !@latest_article.nil? %>
            <%= render partial: 'recent_pic', locals: {img_url: @latest_article.picture1} %>
        <% end %>
      </div>
      <div class="col col-md-12 col-lg-4" style="overflow: hidden; height:100%;color:#DFDFDF;">
        <h3>Latest Update:</h3>

        <div>
          <% if !@latest_article.nil? %>
              <h4><%= @latest_article.location %> - <%= @latest_article.date %></h4>
              <%= simple_format truncate @latest_article.description, length: 600 %>
                <%= link_to journal_url do %>
                  <button type="button" class="btn center-block" aria-label="Left Align" style="margin-top:20px;"> Continue Reading...
                  </button>
              <% end %>
          <% end %>
        </div>
      </div>
</div>

<div class="row" style="border-style:solid;border-width:2px;margin-bottom:20px">
  <div class="col col-md-12">
  </div>
</div>

<div class="row">

  <div class="col col-md-8 col-lg-8">
    <%= render 'geo_chart' %>
  </div>
  <div class="col col-md-4 col-lg-4" style="height:100%">
    <%= render partial: 'recent_loc', locals: {recent_locations: @recent_locations} %>
  </div>

</div>

<div class="row" style="border-style:solid;border-width:2px;margin-bottom:20px">
  <div class="col col-md-12">
  </div>
</div>

