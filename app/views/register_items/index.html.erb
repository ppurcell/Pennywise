<h1>Listing register_items</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @register_items.each do |register_item| %>
      <tr>
        <td><%= register_item.description %></td>
        <td><%= register_item.date %></td>
        <td><%= register_item.value %></td>
        <td><%= link_to 'Show', register_item %></td>
        <td><%= link_to 'Edit', edit_register_item_path(register_item) %></td>
        <td><%= link_to 'Destroy', register_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Register item', new_register_item_path %>
