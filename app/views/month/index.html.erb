<h1>Monthly Ledger</h1>

<table id="ledger_table">
  <thead>
  <tr>
    <th>Date</th>
    <th>Category</th>
    <th>Description</th>
    <th>Amount</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @entries.each do |entry| %>
      <tr id="<%=entry.category.id %>">
        <td><%= entry.date %></td>
        <td><% if !entry.category.nil? %><%= entry.category.id %><%end%></td>
        <td><%= entry.description %></td>
        <td><%= entry.amount %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path %>
